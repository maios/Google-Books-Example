<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <View
            android:id="@+id/placeholder_thumbnail"
            android:layout_width="@dimen/thumbnail_image_width"
            android:layout_height="@dimen/thumbnail_image_height"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:background="#dddddd"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/placeholder_thumbnail"
            android:layout_alignTop="@id/placeholder_thumbnail"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:orientation="vertical">
        <View
                android:layout_width="100dp"
                android:layout_height="@dimen/placeholder_text_height"
                android:background="#dddddd"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/placeholder_text_height"
                android:layout_marginTop="8dp"
                android:background="#dddddd"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/placeholder_text_height"
                android:layout_marginTop="8dp"
                android:background="#dddddd"/>
    </LinearLayout>
</RelativeLayout>
